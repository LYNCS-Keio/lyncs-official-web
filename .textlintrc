{
  "plugins": ["html"],
  "rules": {
    "preset-japanese": {
      "no-doubled-joshi": { "allow": [ "たり" ] },
      "sentence-length": { "max": 150 },
      "spellcheck-tech-word" : false
    },
    "preset-jtf-style": {
      "2.2.2.算用数字と漢数字の使い分け": false,
      "3.1.1.全角文字と半角文字の間": false,
      "3.1.2.全角文字どうし": false, 
      "4.3.1.丸かっこ（）": false
    }
  }
}
